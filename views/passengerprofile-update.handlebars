<body style="background-color:rgba(255, 191, 0, 0.816);"></body>
<div class="container">
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <h1 class="text-center">Profile</h1>
            <form method="post">
                <div>
                    <label for="firstName">First Name</label>
                    <input type="text" name="firstName" id="firstName" class="form-control" placeholder="" value="{{data.dataValues.firstName}}">
                </div>
                <div>
                    <label for="lastName">Last Name</label>
                    <input type="text" name="lastName" id="lastName" class="form-control" placeholder="" value="{{data.dataValues.lastName}}">
                </div>
                <div>
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="" value="{{data.dataValues.email}}">
                </div>
                <div>
                    <label for="address">Address</label>
                    <input type="text" name="address" id="address" class="form-control" value="{{data.dataValues.address}}">
                </div>
                <div>
                    <label for="number">Phone Number</label>
                    <input type="number" name="number" id="number" class="form-control" value="{{data.dataValues.number}}">
                </div>
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary">Save</button>
                    {{#if message}}
                        <p class="text-danger">{{message}}</p>
                    {{/if}}
                </div>
            </form>
        </div>
    </div>
</div>
<style>
    body{
        width: 100%;
  padding: 15px;
  margin: 5px 0 22px 0;
  display: inline-block;
  border: none;
  background: #f1f1f1;
}
    
</style>